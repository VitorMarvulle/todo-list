<div class="confirmation-window">
  <% if notice %>
    <p class="confirmation-notice"><%= notice %></p>
  <% end %>

  <div class="task-details">
    <%= render @task %>
  </div>

  <div class="confirmation-message">
    <p>Tem certeza que deseja excluir a tarefa?</p>
  </div>

  <div class="confirmation-actions">
    <%= button_to "Excluir", @task, method: :delete, class: "btn btn-danger" %>
    <%= link_to "Voltar", dashboard_path, class: "btn btn-secondary" %>
  </div>
</div>
