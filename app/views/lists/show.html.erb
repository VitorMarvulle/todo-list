<p style="color: green"><%= notice %></p>

<div class="lists-container">
  <%= @lists.each do |list| %>
    <div class="list-card">
      <h3 class="list-title"><%= list.title %></h3>
      
      <div class="list-actions">
        <%= link_to "Edit", edit_list_path(list), class: "btn btn-edit" %>
        <%= button_to "Delete", list, method: :delete, class: "btn btn-delete", data: { confirm: "Are you sure?" } %>
      </div>
    </div>
  <% end %>
</div>

<div>
  <%= link_to "Back to lists", lists_path, class: "btn btn-back" %>
</div>
