<p style="color: green"><%= notice %></p>

<% content_for :title, "Lists" %>

<br>
<br>
<br>
<h1>Suas Listas: </h1>
<div class="list-card-container">
  <% @lists.each do |list| %>
    <div id="<%= dom_id list %>" class="list-card">
      <h3 class="list-title"><%= list.title %></h3>

      <div class="list-details">
        <p><strong>Title:</strong> <%= list.title %></p>
        <p><strong>User:</strong> <%= list.user_id %></p>
      </div>

      <div class="list-actions">
        <%= link_to "Editar", edit_list_path(list), class: "btn btn-edit" %> 
        <%= button_to "Excluir", list, method: :delete, class: "btn btn-delete" %>
      </div>
    </div>
  <% end %>
</div>

<div class="list-actions">
<%= link_to "Voltar", dashboard_path , class: "btn btn-primary"%>
</div>

